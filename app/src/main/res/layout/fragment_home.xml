<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/sliderViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_fragment_main"></androidx.viewpager2.widget.ViewPager2>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fr_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt_checkReservation"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_check_reserv"
            android:elevation="4dp"
            android:fontFamily="@font/happiness_sans_regular"
            android:gravity="center"
            android:text="예약확인"
            android:textColor="@color/black"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/bt_findBranch"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_check_locate"
            android:elevation="4dp"
            android:fontFamily="@font/happiness_sans_regular"
            android:gravity="center"
            android:text="지점찾기"
            android:textColor="@color/black"
            android:textSize="26dp" />

    </LinearLayout>


</LinearLayout>
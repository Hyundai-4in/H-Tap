<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlActivated">@color/LightPurple</item> <!-- 선택된 날짜의 배경 색상 -->
        <item name="android:background">@color/datePickerBg</item>

        <item name="android:textColorPrimary">@color/white</item> <!-- 기본 날짜의 텍스트 색상 -->
    </style>

    <style name="TextViewWithBorder"> <!-- 둥근 테두리 TextView-->
        <item name="android:background">@drawable/border_background</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="StyleExpansionDialog">
        <item name="android:windowEnterAnimation">@anim/expansion_dialog</item>
        <item name="android:windowExitAnimation">@anim/reduction_dialog</item>
    </style>
</resources>